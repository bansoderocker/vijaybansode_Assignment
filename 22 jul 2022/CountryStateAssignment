
--CREATE TABLE CONTINENT
--CONTENTID INT PK
--CONTNAME  VARCHAR(20)

CREATE TABLE CONTINENT(
CONENTID INT PRIMARY KEY,
CONTNAME VARCHAR(20))


--CREATE TABLE COUNTRY
--COUNTYID VARCHAR(3)  PK	
--COUNTRYNAME VARCHAR	UNIQUE
--CAPITAL		VARCHAR
--FLAG		PICTURE
--CONTENTID INT		FK


CREATE TABLE COUNTRY(
COUNTYID VARCHAR(3)  PRIMARY KEY,	
COUNTRYNAME VARCHAR(20)	UNIQUE,
CAPITAL		VARCHAR(20),
FLAG		VARBINARY(MAX),
CONTENTID INT  FOREIGN KEY REFERENCES CONTINENT(CONENTID) 
)

--please do not use datatype image,image got depricated / obsolete



CREATE TABLE [STATE] (
STATEID  VARCHAR(3)  PRIMARY KEY,
STATENAME   VARCHAR(20)	UNIQUE,
STATECAPITAL   VARCHAR(20),
COUNTYID VARCHAR(3)	 FOREIGN KEY REFERENCES COUNTRY(COUNTYID) )
